<h2><%=@user.name %>さんとのチャット</h2>

<%= form_with model:@chat,local:true do|f| %>
<%= f.text_field :message %>
<%= f.hidden_field :room_id %>
<%= f.submit %>
<% end %>

<table width="400px",height="100px">
  <thead>
    <tr>
      <td>投稿者</td>
      <td>投稿内容</td>
    </tr>
  </thead>
  <tbody>
    <% @chats.each do |chat| %>
    <tr>
      <td> <%= chat.user.name %></td>
      <td> <%= chat.message %></td>
    </tr>
      <% end %>
  </tbody>
</table>