<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class=class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing</h1>
        <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book",class:"btn btn-lg btn-block btn-info mt-4" %>
        </div>
        <% end %>
        

      </div>
    </div>

  </div>
</main>