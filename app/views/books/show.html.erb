<main>
  <p id ="notice"></p>
   <div class="container px-5 px-sm-0">
    <div class="row">
     <div class="col-md-3">

      <%= render"users/list",book:@newbook,user:@user %>
     </div>
     <div class="col-md-8 offset-md-1">
       <h2>Book detail</h2>
       <table class="table">
         <tbody>
           <tr>
             <td>
              <%= link_to user_path(@user.id) do %>
               <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
              <% end %>
               <br><%= link_to @user.name,user_path(@user.id) %>
             </td>
             <td><%=link_to @book.title,book_path(@book.id) %></td>
             <td><%=@book.body %></td>
               <%if @book.user == current_user %>
                 <td>
                 <%=link_to edit_book_path(@book.id),class:"btn btn-sm btn-success" do %>
                 Edit
                 <% end %>
                </td>

                 <td>
                 <%=link_to book_path(@book),method: :delete, class:"btn btn-sm btn-danger" ,"data-confirm" => "本当に消しますか？" do %>
                 Destroy
                 <% end %>
                <% end %>
                 </td>
           </tr>
         </tbody>
       </table>

     </div>
     </div>
    </div>
  </div>
</main>
