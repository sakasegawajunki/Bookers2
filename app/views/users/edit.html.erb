<main>
<p id ="notice"></p>
<div class="container">
  <div class= "row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      
       <div id="error_explanation">
    <% if @user.errors.any? %>
      <h3>
     <%= @user.errors.count %> errors prohibited this obj from being saved:
       </h3>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
       <li> 
       <%= message %>
       </li>
      <% end %>
      </ul>
    <% end %>
    </div>
    
      <%= form_with model:@user, local:true do |f| %>
  <div class="from-group">
   <label for = "inputName">Name</label><br>
     <%= f.text_field :name,autofocus: true %>
  </div>
  <div class="from-group">
  
  <label for="user-image">Image</label>
  <br> <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  </div>
  <div class="from-group">
   <label for = "user-introduction">Introduction</label><br>
   <%= f.text_area :introduction,autofocus: true %>
  </div>
  <%= f.submit"Update User" %>
<% end %>
    </div>
  </div>
</div>
</main>