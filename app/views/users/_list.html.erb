    <div id="error_explanation">
    <% if book.errors.any? %>
      <h3>
     <%= book.errors.count %> errors prohibited this obj from being saved:
       </h3>
      <ul>
      <% book.errors.full_messages.each do |message| %>
       <li> 
       <%= message %>
       </li>
      <% end %>
      </ul>
    <% end %>
    </div>

    <h2>User info</h2>
        <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format:"png", fallback: "no_image.jpg"%>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
          <tr>
            <td>フォロー数: <%= link_to user.followings.count, user_followings_path(user.id) %></td>

          </tr>
          <tr>
            <td>フォロワー数: <%= link_to user.followers.count, user_followers_path(user.id) %></td>
           </tr>
          <tr>
            <th>
           <% if current_user.following?(user) %>
             <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: 'btn btn-sm btn-block btn-info w-10' %>
             <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: 'btn btn-sm btn-block btn-info w-10' %>
           <% end %>
              
            </th>
          </tr>
        </tbody>

      </table>
      <div class="row">
        <%= link_to edit_user_path(user) do%>
        <div class="btn">
          <i class="fas fa-user-cog fa-2x btn btn-outline-secondary btn-block" ></i>
        <% end %>
        </div>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book, local:true do |f| %>
      <div class="form-group">
        <label for="book-title">Title</label>
       <%= f.text_field :title, class:"form-control" %>
       </div>
       <div class="form-group">
         <label for="book_opinion">Opinion</label>
         <%= f.text_area :body, class:"form-control",rows:"3" %>
       </div>
       <hr>
          <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-info mt-4" %>
      <% end %>