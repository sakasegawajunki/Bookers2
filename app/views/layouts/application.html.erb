<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav class="navbar navbar-expand-lg nabvar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">
          <span>
           Bookers
          </span>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse show" id="navbarNavDropdown" style>
          <ul class="navbar-nav ml-auto">
            <li><a class="fas fa-home nav-link text-light" href="/"> Home </a></li>
            <li><a class="fas fa-link nav-link text-light" href="/homes/about"> About</a></li>
            <% if user_signed_in? %>
            <li><a class="fas fa-users nav-link text-light" href="/users">Users</a></li>
            <li><a class="fas fa-sign-out-alt nav-link text-light" href="/"> log out</a></li>
            <% else %>
            <li><a class="fas fa-user-plus nav-link text-light" href="/users/sign_up"> sign up</a></li>
            <li><a class="fas fa-sign-in-alt nav-link text-light" href="/users/sign_in"> login</a></li>
            <% end %>   
          </ul>
        </div>
      </div>
    </nav>
  </header>
  
    <%= yield %>
    
    <footer>
      <div class="container mt-5">
        <div class = "row">
          <div class ="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
